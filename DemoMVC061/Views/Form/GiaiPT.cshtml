@{
    ViewBag.Title = "Giải phương trình bậc 2";
}

<h2>Giải phương trình bậc 2: ax² + bx + c = 0</h2>

<form method="post">
    <label>a:</label><input type="number" step="any" name="a" required /><br /><br />
    <label>b:</label><input type="number" step="any" name="b" required /><br /><br />
    <label>c:</label><input type="number" step="any" name="c" required /><br /><br />
    
    <button type="submit">Giải</button>
</form>

@if (ViewBag.KetQua != null)
{
    <h3>Kết quả: @ViewBag.KetQua</h3>
}
